<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 https://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>${project.version}</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>addax-admin</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>addax-admin-*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>application.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>service.sh</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>env.template.sh</include>
                <include>env.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/jdbc-drivers</directory>
            <outputDirectory>drivers</outputDirectory>
            <includes>
                <include>README.txt</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
